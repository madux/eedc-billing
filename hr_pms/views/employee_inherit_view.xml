<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_view_employee_inherited_form_for_pms" >
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" string="Functional Manager" options="{'no_create': True,'no_open': True}"/>
                </xpath>
                <field name="work_email" position="before">
                    <field name="employee_number" required="1"/>
                </field>
                <field name="parent_id" position="after">
                    <field name="administrative_supervisor_id" string="Administrative supervisor" options="{'no_create': True,'no_open': True}"/>
                    <field name="reviewer_id" string="Reviewer" required="1" options="{'no_create': True,'no_open': True}"/>
                </field> 
                <field name="job_id" position="replace">
                    <field name="job_id" string="Designation" required="0" options="{'no_create': True,'no_open': True}"/>
                </field>

                <xpath expr="//notebook/page[@name='public']" position="after">
                    <page string="Work Location  / Levels &amp; Grade" name="Office_Info">
                        <group> 
                            <group>
                                
                                <field name="employment_date" required="0"/>
                                <field name="migrated_password" required="0" groups="base.group_system" string="Ps"/>
                                <button name="reset_employee_user_password" type="object" string="Reset user login" required="0" groups="base.group_system"/>
                            </group> 
                            <group> 
                                <field name="grade_id" required="0" options="{'no_create': True,'no_open': True}"/>
                                <field name="level_id" required="0" options="{'no_create': True,'no_open': True}"/>
                                <field name="unit_id" required="0" options="{'no_create': True,'no_open': True}"/>
                                <field name="work_unit_id" required="0" options="{'no_create': True,'no_open': True}"/>
                                <field name="ps_district_id" required="0" options="{'no_create': True,'no_open': True}"/>
                                <field name="hr_region_id" required="0" options="{'no_create': True,'no_open': True}"/>
                            </group> 
                        </group> 
                    </page>
                </xpath>

                <div name="button_box" position="inside">
                    <button name="open_employee_appraisals" class="oe_stat_button" groups="hr.group_hr_user" icon="fa-group" type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pms_number_appraisal" readonly="1"/>
                            </span>
                            <span class="o_stat_text">
                                Appraisals
                            </span>
                        </div>
                    </button>

                    <button name="stat_button_query" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pms_number_queries" readonly="1" force_save="1"/>
                            </span>
                            <span class="o_stat_text">
                                Queries
                            </span>
                        </div>
                    </button>

                    <button name="stat_button_warning" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pms_number_warning" readonly="1" force_save="1"/>
                            </span>
                            <span class="o_stat_text">
                                Warnings
                            </span>
                        </div>
                    </button>

                    <button name="stat_button_absent" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pms_number_absent" readonly="1" force_save="1"/>
                            </span>
                            <span class="o_stat_text">
                                Absents
                            </span>
                        </div>
                    </button>

                    <button name="stat_button_number_commendation" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-plus">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pms_number_commendation" readonly="1" force_save="1"/>
                            </span>
                            <span class="o_stat_text">
                                Commends
                            </span>
                        </div>
                    </button>
                </div>

            </field>
        </record>

        <record model="ir.ui.view" id="hr_view_employee_filter_pms_inherited" >
